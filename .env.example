# SECURITY: Environment Configuration Template for REDA Platform
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/reda_db

# JWT Authentication - CRITICAL: Generate strong, unique secrets
# Use: openssl rand -hex 32 to generate secure secrets
VITE_JWT_SECRET=your-32-character-jwt-secret-here
VITE_JWT_REFRESH_SECRET=your-32-character-refresh-secret-here
VITE_JWT_EXPIRY=1h
VITE_JWT_REFRESH_EXPIRY=7d

# QR Code Security
VITE_QR_SECRET_KEY=your-qr-secret-key-here

# Application Configuration
VITE_APP_ENV=production
VITE_API_URL=https://your-api-domain.com
VITE_APP_URL=https://your-frontend-domain.com
VITE_PORT=3000

# Rate Limiting
VITE_RATE_LIMIT_MAX=100
VITE_RATE_LIMIT_WINDOW_MS=900000

# Email Configuration (for user verification)
VITE_EMAIL_HOST=smtp.your-email-provider.com
VITE_EMAIL_PORT=587
VITE_EMAIL_USER=your-email@domain.com
VITE_EMAIL_PASSWORD=your-email-password
VITE_EMAIL_FROM=noreply@yourdomain.com

# Frontend URL for CORS (production only)
FRONTEND_URL=https://your-frontend-domain.com

# Redis Configuration (for rate limiting - recommended)
REDIS_URL=redis://localhost:6379

# Security Features
VITE_ENABLE_DEBUG=false
VITE_SHOW_MOCK_NOTICE=false
VITE_FALLBACK_ENABLED=false

# Feature Flags
VITE_ENABLE_FEEDBACK=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_ANALYTICS=false

# Development Only (set to false in production)
VITE_MOCK_AUTH=false
VITE_MOCK_DATA=false