# üö® CRITICAL SECURITY VARIABLES - REQUIRED
# =============================================================================

# JWT Authentication Secrets (32+ characters recommended)
# Generate secure secrets using: openssl rand -base64 32
VITE_JWT_SECRET=your-super-secure-jwt-secret-here-minimum-32-characters
VITE_JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here-minimum-32-characters

# Database Connection (use environment variables, never hardcode)
VITE_DATABASE_URL=postgres://username:password@hostname:port/database_name?sslmode=require

# QR Code Security
VITE_QR_SECRET_KEY=your-super-secure-qr-secret-key-here-minimum-32-characters

# =============================================================================
# üåç APPLICATION ENVIRONMENT
# =============================================================================
VITE_APP_ENV=development
VITE_DEBUG=false
FRONTEND_URL=http://localhost:5173

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================
VITE_JWT_EXPIRY=1h
VITE_JWT_REFRESH_EXPIRY=7d

# Rate Limiting
VITE_RATE_LIMIT_MAX=100
VITE_RATE_LIMIT_WINDOW_MS=900000

# QR Code Rate Limiting
VITE_QR_RATE_LIMIT_MAX=20
VITE_QR_RATE_LIMIT_WINDOW_MS=60000
VITE_QR_TOKEN_ROTATION_DAYS=30

# =============================================================================
# üìß EMAIL CONFIGURATION
# =============================================================================
VITE_EMAIL_HOST=smtp.gmail.com
VITE_EMAIL_PORT=587
VITE_EMAIL_USER=your-email@gmail.com
VITE_EMAIL_PASSWORD=your-app-password
VITE_EMAIL_FROM=noreply@gudcity.com

# =============================================================================
# üåê API & NETWORK
# =============================================================================
VITE_API_URL=http://localhost:3000
VITE_PORT=3000
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# =============================================================================
# üéØ FEATURE FLAGS
# =============================================================================
VITE_ENABLE_FEEDBACK=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_SHOW_MOCK_NOTICE=true

# =============================================================================
# üîß DEVELOPMENT & TESTING
# =============================================================================
VITE_MOCK_AUTH=false
VITE_MOCK_DATA=false
VITE_FALLBACK_ENABLED=true
VITE_FALLBACK_TIMEOUT_MS=5000
VITE_FALLBACK_RETRY_ATTEMPTS=3
VITE_FALLBACK_SHOW_INDICATOR=true
VITE_FALLBACK_MOCK_DATA=true

# =============================================================================
# üì± INTERNATIONALIZATION
# =============================================================================
VITE_DEFAULT_LANGUAGE=en

# =============================================================================
# üö® SECURITY NOTES
# =============================================================================
# 1. All JWT secrets must be at least 32 characters long
# 2. Never use default or example secrets in production
# 3. Use strong, randomly generated secrets
# 4. Rotate secrets regularly (quarterly recommended)
# 5. Use HTTPS in production
# 6. Restrict CORS origins to specific domains
# 7. Enable rate limiting
# 8. Use environment variables for all sensitive data

