# Vercel Environment Configuration
# This file contains the minimum required environment variables for Vercel deployment

# Application Environment
NODE_ENV=production
VITE_APP_ENV=production

# JWT Authentication Secrets (REQUIRED - Replace with your actual secrets)
VITE_JWT_SECRET=your_secure_jwt_secret_minimum_64_characters_long_replace_with_real_secret
VITE_JWT_REFRESH_SECRET=your_secure_jwt_refresh_secret_minimum_64_characters_long_replace_with_real_secret

# QR Code Security (REQUIRED - Replace with your actual secrets)
VITE_QR_SECRET_KEY=your_secure_qr_secret_key_minimum_64_characters_long_replace_with_real_secret
VITE_QR_ENCRYPTION_KEY=your_secure_qr_encryption_key_minimum_64_characters_long_replace_with_real_secret

# QR Code Encryption Settings
VITE_QR_ENCRYPTION_ENABLED=true

# Application Configuration
VITE_API_URL=https://your-api-domain.vercel.app
APP_URL=https://your-app-domain.vercel.app

# Security Configuration
VITE_CORS_ORIGINS=https://your-app-domain.vercel.app,https://your-api-domain.vercel.app
VITE_CSP_ENABLED=true

# Debug and Feature Flags
VITE_DEBUG=false
VITE_ENABLE_FEEDBACK=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_SHOW_MOCK_NOTICE=false
VITE_MOCK_AUTH=false
VITE_MOCK_DATA=false

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# SSL Configuration
SSL_ENABLED=true